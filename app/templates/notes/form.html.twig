{{ form_start(form, {'attr': {'id': 'note_form'}}) }}
{{ form_errors(form) }}

<div class="content w-full px-16 pt-8 pb-4">

    <div class="inline-flex mb-4 w-full">

        <div class="w-9/12">
            {{ form_row(form.title, {
                'attr': {
                    'class': 'bg-white w-11/12 border border-gray-400 hover:border-gray-500 px-4 py-1 rounded shadow',
                    'placeholder': 'Note\'s Title'
                },
                'label': false
            }) }}
        </div>

        <div class="w-2/12">
            {{ form_row(form.notebook, {
                'attr': {
                    'class': 'bg-white border max-w-full border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow'
                },
                'label': false
            }) }}
        </div>

        <button type="submit" id="note_form_save"
                class="font-semibold mx-6 pl-4 inline-flex items-center bg-button-blue text-white rounded-full">
            <span>Save</span>
            <img class="mx-2" src="{{ asset('build/images/icons/save.png') }}" alt="save-note">
        </button>

    </div>

    <div>
        {{ form_row(form.content, {
            'attr': {
                'class': 'tinymce form-control rounded'
            },
            'label': false
        }) }}
    </div>

</div>

{{ form_end(form) }}
